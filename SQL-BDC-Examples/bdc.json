{
    "apiVersion": "v1",
    "metadata": {
        "kind": "BigDataCluster",
        "name": "mssql-cluster"
    },
    "spec": {
        "resources": {
            "nmnode-0": {
                "spec": {
                    "replicas": 1
                }
            },
            "sparkhead": {
                "spec": {
                    "replicas": 1
                }
            },
            "zookeeper": {
                "spec": {
                    "replicas": 0
                }
            },
            "gateway": {
                "spec": {
                    "replicas": 1,
                    "endpoints": [
                        {
                            "name": "Knox",
                            "serviceType": "NodePort",
                            "port": 30443
                        }
                    ]
                }
            },
            "appproxy": {
                "spec": {
                    "replicas": 1,
                    "endpoints": [
                        {
                            "name": "AppServiceProxy",
                            "serviceType": "NodePort",
                            "port": 30778
                        }
                    ]
                }
            },
            "master": {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Master",
                    "replicas": 1,
                    "endpoints": [
                        {
                            "name": "Master",
                            "serviceType": "NodePort",
                            "port": 31433
                        },
                        {
                            "name": "MasterSecondary",
                            "serviceType": "NodePort",
                            "port": 31436
                        }
                    ],
                    "settings": {
                        "sql": {
                            "hadr.enabled": "false"
                        }
                    },
                    "storage": {
                        "data": {
                            "size": "2000Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        },
                        "logs": {
                            "size": "200Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        }
                    }
                }
            },
            "compute-0": {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Compute",
                    "replicas": 1
                }
            },
            "data-0": {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Data",
                    "replicas": 2,
                    "storage": {
                        "data": {
                            "size": "2000Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        },
                        "logs": {
                            "size": "200Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        }
                    }
                }
            },
            "storage-0": {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Storage",
                    "replicas": 4,
                    "settings": {
                        "spark": {
                            "includeSpark": false
                        }
                    },
                    "storage": {
                        "data": {
                            "size": "10000Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        },
                        "logs": {
                            "size": "200Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        }
                    }
                }
            },
            "spark-0": {
                "metadata": {
                    "kind": "Pool",
                    "name": "default"
                },
                "spec": {
                    "type": "Spark",
                    "replicas": 4,
                    "storage": {
                        "data": {
                            "size": "5000Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        },
                        "logs": {
                            "size": "200Gi",
                            "className": "sql-bdc-storage-class",
                            "accessMode": "ReadWriteOnce"
                        }
                    }
                }
            }
        },
        "services": {
            "sql": {
                "resources": [
                    "master",
                    "compute-0",
                    "data-0",
                    "storage-0"
                ]
            },
            "hdfs": {
                "resources": [
                    "nmnode-0",
                    "zookeeper",
                    "storage-0",
                    "sparkhead",
                    "spark-0"
                ],
                "settings": {}
            },
            "spark": {
                "resources": [
                    "sparkhead",
                    "storage-0",
                    "spark-0"
                ],
                "settings": {
                    "spark-defaults-conf.spark.driver.cores": "4",
                    "spark-defaults-conf.spark.driver.memory": "16G",
                    "spark-defaults-conf.spark.driver.memoryOverhead": "2048",
                    "spark-defaults-conf.spark.driver.maxResultSize": "16g",
                    "spark-defaults-conf.spark.executor.instances": "24",
                    "spark-defaults-conf.spark.executor.cores": "8",
                    "spark-defaults-conf.spark.executor.memory": "55g",
                    "spark-defaults-conf.spark.executor.memoryOverhead": "6144",
		            "spark-defaults-conf.spark.sql.cbo.enabled": "true",
		            "spark-defaults-conf.spark.sql.cbo.joinReorder.enabled": "true",			
		            "spark-defaults-conf.spark.scheduler.listenerbus.eventqueue.capacity": "50000",
                    "yarn-site.yarn.nodemanager.resource.memory-mb": "368640",
                    "yarn-site.yarn.nodemanager.resource.cpu-vcores": "56",
                    "yarn-site.yarn.scheduler.maximum-allocation-mb": "368640",
                    "yarn-site.yarn.scheduler.maximum-allocation-vcores": "56"
                }
            }
        }
    }
}
